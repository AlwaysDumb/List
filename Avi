<body>
    <div class="container">
        <header>
            <h1>ğŸ  ××¢×§×‘ ×—×¤×¦×™× ×‘×™×Ÿ ×©× ×™ ××§×•××•×ª</h1>
            <p class="subtitle">
                <span class="save-indicator" id="saveIndicator">âœ“ × ×©××¨</span>
                × ×”×œ ××ª ×”××œ××™ ×©×œ×š ×‘×§×œ×•×ª
            </p>
        </header>

        <div class="grid">
            <div class="card">
                <h2><span class="icon">ğŸ“¦</span> ××” ×™×© ×œ×™ ×‘×™×©×™×‘×”</h2>
                <div class="input-group">
                    <textarea id="currentInput" placeholder="×©× ×”×¤×¨×™×˜ (××• ×”×“×‘×§ ×¨×©×™××”...)" rows="1"></textarea>
                    <input type="number" id="currentQtyInput" placeholder="×›××”?" min="1" value="1">
                    <button onclick="addCurrentItem()">×”×•×¡×£</button>
                </div>
                <ul class="item-list" id="currentList"></ul>
            </div>

            <div class="card">
                <h2><span class="icon">â­</span> ××” ×¦×¨×™×š ×œ×”×™×•×ª</h2>
                <div class="input-group">
                    <textarea id="requiredInput" placeholder="×©× ×”×¤×¨×™×˜ (××• ×”×“×‘×§ ×¨×©×™××”...)" rows="1"></textarea>
                    <input type="number" id="requiredQtyInput" placeholder="×›××”?" min="1" value="1">
                    <button onclick="addRequiredItem()">×”×•×¡×£</button>
                </div>
                <ul class="item-list" id="requiredList"></ul>
            </div>
        </div>

        <div class="card to-bring">
            <h2><span class="icon">âœˆï¸</span> ××” ×¦×¨×™×š ×œ×”×‘×™×</h2>
            <div class="stats">
                <div class="stat">
                    <div class="stat-number" id="toBringCount">0</div>
                    <div class="stat-label">×¤×¨×™×˜×™× ×œ×”×‘×™×</div>
                </div>
                <div class="stat">
                    <div class="stat-number" id="currentCount">0</div>
                    <div class="stat-label">×™×© ×œ×™</div>
                </div>
                <div class="stat">
                    <div class="stat-number" id="requiredCount">0</div>
                    <div class="stat-label">×¨×•×¦×”</div>
                </div>
            </div>
            <ul class="item-list" id="toBringList"></ul>
        </div>
    </div>

    <script>
        let currentItems = {};
        let requiredItems = {};

        function showSaveIndicator() {
            const indicator = document.getElementById('saveIndicator');
            indicator.classList.add('show');
            setTimeout(() => indicator.classList.remove('show'), 2000);
        }

        function saveData() {
            try {
                localStorage.setItem('itemTracker_current', JSON.stringify(currentItems));
                localStorage.setItem('itemTracker_required', JSON.stringify(requiredItems));
                showSaveIndicator();
            } catch (e) {
                console.error('Error saving:', e);
            }
        }

        function loadData() {
            try {
                const savedCurrent = localStorage.getItem('itemTracker_current');
                const savedRequired = localStorage.getItem('itemTracker_required');
                if (savedCurrent) currentItems = JSON.parse(savedCurrent);
                if (savedRequired) requiredItems = JSON.parse(savedRequired);
                render();
            } catch (e) {
                console.error('Error loading:', e);
            }
        }

        function addCurrentItem() {
            const input = document.getElementById('currentInput');
            const qtyInput = document.getElementById('currentQtyInput');
            const defaultQty = parseInt(qtyInput.value) || 1;
            
            let lines = input.value.split(/\n+/).map(l => l.trim()).filter(l => l);
            let items = [];
            lines.forEach(line => {
                items = items.concat(line.split(',').map(i => i.trim()).filter(i => i));
            });
            
            if (items.length > 0) {
                items.forEach(item => {
                    let name = item;
                    let qty = defaultQty;
                    
                    const qtyMatch = item.match(/^(.+?)\s*[\(\s](?:×™×©\s*)?(\d+)[\)]?\s*$/);
                    if (qtyMatch) {
                        name = qtyMatch[1].trim();
                        qty = parseInt(qtyMatch[2]);
                    } else {
                        const simpleQtyMatch = item.match(/^(.+?)\s+(\d+)\s*$/);
                        if (simpleQtyMatch) {
                            name = simpleQtyMatch[1].trim();
                            qty = parseInt(simpleQtyMatch[2]);
                        }
                    }
                    currentItems[name] = qty;
                });
                input.value = '';
                qtyInput.value = '1';
                input.style.height = 'auto';
                saveData();
                render();
            }
        }

        function addRequiredItem() {
            const input = document.getElementById('requiredInput');
            const qtyInput = document.getElementById('requiredQtyInput');
            const defaultQty = parseInt(qtyInput.value) || 1;
            
            let lines = input.value.split(/\n+/).map(l => l.trim()).filter(l => l);
            let items = [];
            lines.forEach(line => {
                items = items.concat(line.split(',').map(i => i.trim()).filter(i => i));
            });
            
            if (items.length > 0) {
                items.forEach(item => {
                    let name = item;
                    let qty = defaultQty;
                    
                    const qtyMatch = item.match(/^(.+?)\s*[\(\s](?:×™×©\s*)?(\d+)[\)]?\s*$/);
                    if (qtyMatch) {
                        name = qtyMatch[1].trim();
                        qty = parseInt(qtyMatch[2]);
                    } else {
                        const simpleQtyMatch = item.match(/^(.+?)\s+(\d+)\s*$/);
                        if (simpleQtyMatch) {
                            name = simpleQtyMatch[1].trim();
                            qty = parseInt(simpleQtyMatch[2]);
                        }
                    }
                    requiredItems[name] = qty;
                });
                input.value = '';
                qtyInput.value = '1';
                input.style.height = 'auto';
                saveData();
                render();
            }
        }

        function incrementCurrentItem(item) {
            currentItems[item] = (currentItems[item] || 0) + 1;
            saveData();
            render();
        }

        function decrementCurrentItem(item) {
            if (currentItems[item] > 1) {
                currentItems[item]--;
                saveData();
                render();
            } else {
                removeCurrentItem(item);
            }
        }

        function incrementRequiredItem(item) {
            requiredItems[item] = (requiredItems[item] || 0) + 1;
            saveData();
            render();
        }

        function decrementRequiredItem(item) {
            if (requiredItems[item] > 1) {
                requiredItems[item]--;
                saveData();
                render();
            } else {
                removeRequiredItem(item);
            }
        }

        function copyToCurrentFromRequired(item) {
            const qty = requiredItems[item];
            if (qty) {
                currentItems[item] = qty;
                saveData();
                render();
            }
        }

        function copyToRequiredFromCurrent(item) {
            const qty = currentItems[item];
            if (qty) {
                requiredItems[item] = qty;
                saveData();
                render();
            }
        }

        function removeCurrentItem(item) {
            delete currentItems[item];
            saveData();
            render();
        }

        function removeRequiredItem(item) {
            delete requiredItems[item];
            saveData();
            render();
        }

        function calculateToBring() {
            const toBring = {};
            for (const [item, requiredQty] of Object.entries(requiredItems)) {
                const currentQty = currentItems[item] || 0;
                const needed = requiredQty - currentQty;
                if (needed > 0) toBring[item] = needed;
            }
            return toBring;
        }

        function render() {
            const currentList = document.getElementById('currentList');
            const requiredList = document.getElementById('requiredList');
            const toBringList = document.getElementById('toBringList');
            const toBring = calculateToBring();

            const currentEntries = Object.entries(currentItems);
            if (currentEntries.length === 0) {
                currentList.innerHTML = '<div class="empty-state">×¢×“×™×™×Ÿ ×œ× ×”×•×¡×¤×ª ×¤×¨×™×˜×™×</div>';
            } else {
                currentList.innerHTML = currentEntries.map(([item, qty]) => `
                    <li class="item">
                        <span class="item-name">${item}<span class="quantity-badge">${qty}</span></span>
                        <div class="item-actions">
                            <div class="qty-controls">
                                <button class="minus" data-action="dec-current" data-item="${item}">-</button>
                                <button class="plus" data-action="inc-current" data-item="${item}">+</button>
                            </div>
                            <button class="copy-to" data-action="copy-to-required" data-item="${item}">â†’ ×¦×¨×™×š</button>
                            <button class="delete" data-action="del-current" data-item="${item}">××—×§</button>
                        </div>
                    </li>
                `).join('');
            }

            const requiredEntries = Object.entries(requiredItems);
            if (requiredEntries.length === 0) {
                requiredList.innerHTML = '<div class="empty-state">×¢×“×™×™×Ÿ ×œ× ×”×•×¡×¤×ª ×¤×¨×™×˜×™×</div>';
            } else {
                requiredList.innerHTML = requiredEntries.map(([item, qty]) => `
                    <li class="item">
                        <span class="item-name">${item}<span class="quantity-badge">${qty}</span></span>
                        <div class="item-actions">
                            <div class="qty-controls">
                                <button class="minus" data-action="dec-required" data-item="${item}">-</button>
                                <button class="plus" data-action="inc-required" data-item="${item}">+</button>
                            </div>
                            <button class="copy-to" data-action="copy-to-current" data-item="${item}">â†’ ×™×© ×œ×™</button>
                            <button class="delete" data-action="del-required" data-item="${item}">××—×§</button>
                        </div>
                    </li>
                `).join('');
            }

            const toBringEntries = Object.entries(toBring);
            if (toBringEntries.length === 0) {
                toBringList.innerHTML = '<div class="empty-state">ğŸ‰ ×™×© ×œ×š ××ª ×›×œ ××” ×©××ª×” ×¦×¨×™×š!</div>';
            } else {
                toBringList.innerHTML = toBringEntries.map(([item, qty]) => `
                    <li class="item">
                        <span class="item-name">ğŸ“Œ ${item}<span class="quantity-badge quantity-needed">${qty}</span></span>
                    </li>
                `).join('');
            }

            const totalToBring = Object.values(toBring).reduce((sum, qty) => sum + qty, 0);
            const totalCurrent = Object.values(currentItems).reduce((sum, qty) => sum + qty, 0);
            const totalRequired = Object.values(requiredItems).reduce((sum, qty) => sum + qty, 0);
            
            document.getElementById('toBringCount').textContent = totalToBring;
            document.getElementById('currentCount').textContent = totalCurrent;
            document.getElementById('requiredCount').textContent = totalRequired;
            
            setupEventListeners();
        }
        
        function setupEventListeners() {
            document.querySelectorAll('.item-list').forEach(list => {
                const newList = list.cloneNode(true);
                list.parentNode.replaceChild(newList, list);
            });
            
            document.getElementById('currentList').addEventListener('click', handleCurrentListClick);
            document.getElementById('requiredList').addEventListener('click', handleRequiredListClick);
        }
        
        function handleCurrentListClick(e) {
            const button = e.target.closest('button');
            if (!button) return;
            const action = button.getAttribute('data-action');
            const item = button.getAttribute('data-item');
            if (!action || !item) return;
            
            switch(action) {
                case 'inc-current': incrementCurrentItem(item); break;
                case 'dec-current': decrementCurrentItem(item); break;
                case 'copy-to-required': copyToRequiredFromCurrent(item); break;
                case 'del-current': removeCurrentItem(item); break;
            }
        }
        
        function handleRequiredListClick(e) {
            const button = e.target.closest('button');
            if (!button) return;
            const action = button.getAttribute('data-action');
            const item = button.getAttribute('data-item');
            if (!action || !item) return;
            
            switch(action) {
                case 'inc-required': incrementRequiredItem(item); break;
                case 'dec-required': decrementRequiredItem(item); break;
                case 'copy-to-current': copyToCurrentFromRequired(item); break;
                case 'del-required': removeRequiredItem(item); break;
            }
        }

        window.addEventListener('DOMContentLoaded', loadData);
        window.addEventListener('beforeunload', saveData);
    </script>
</body>
</html>
